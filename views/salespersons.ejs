<%- include layouts/header.ejs %>

    <div class="page-data">
        <div class="data-btn">
            <button onClick="addSalesperson();">+ Add Salesperson</button>
        </div>
        <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                </tr>
                <% if(data.length){
                 for(var i = 0;i < data.length;i++) { %>
                    <tr>
                        <td>
                            <%=data[i].IdSalesPerson%>
                        </td>
                        <td>
                            <%=data[i].DisplayName%>
                        </td>
                        <td>
                            <form id="myform<%=data[i].IdSalesPerson%>" method="post" action="../Salespersons/setInactive/<%=data[i].IdSalesPerson%>">
                                <input type="hidden" name="name" value="value" />
                                <a class="a-inside delete" onclick="document.getElementById('myform<%=data[i].IdSalesPerson%>').submit();">Set Inactive</a>
                            </form>
                        </td>
                    </tr>
                    <% }
             }else{ %>
                        <tr>
                            <td colspan="3">No Salespersons!</td>
                        </tr>
                        <% } %>
            </table>
        </div>
    </div>

    <%- include layouts/footer.ejs %>
